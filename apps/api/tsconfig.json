{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "lib": ["es2015"]
}